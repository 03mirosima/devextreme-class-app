{
  "applicationEngine": "react",
  "build": {
    "commands": [
        {
            "command": "build-theme",
            "options": {
                "inputFile": "public/themes/metadata.base.json",
                "outputFile": "public/themes/generated/theme.base.css"
            }
        },
        {
            "command": "build-theme",
            "options": {
                "inputFile": "public/themes/metadata.additional.json",
                "outputFile": "public/themes/generated/theme.additional.css"
            }
        },
        {
            "command": "export-theme-vars",
            "options": {
                "inputFile": "public/themes/metadata.base.json",
                "outputFile": "src/themes/generated/variables.base.scss"
            }
        },
        {
            "command": "export-theme-vars",
            "options": {
                "inputFile": "public/themes/metadata.additional.json",
                "outputFile": "src/themes/generated/variables.additional.scss"
            }
        }
    ]
}
}
